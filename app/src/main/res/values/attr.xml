<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="StateView">
        <attr name="strokeWidth2" format="float" />
        <attr name="strokeColor" format="color|reference" />
        <attr name="phase" format="float" />
        <attr name="duration" format="integer" />
        <attr name="fadeFactor" format="float" />
    </declare-styleable>

    <declare-styleable name="MorphView">
        <attr name="verticalOrientation" format="boolean" />
        <attr name="speed" format="dimension" />
        <attr name="randomSpeed" format="dimension" />
        <attr name="pointCount" format="integer" />
        <attr name="showPoint" format="boolean" />
        <attr name="drawable" format="reference" />
    </declare-styleable>
</resources>